<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/atguigu_logo"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="欢迎注册硅谷社交"/>
    <EditText
        android:id="@+id/et_regist_name"
        style="@style/registEditText"
        android:hint="用户名"
        android:drawableRight="@drawable/login_user_name_icon" />
    <EditText
        android:id="@+id/et_regist_pwd"
        style="@style/registEditText"
        android:hint="密码"
        android:inputType="textPassword"
        android:drawableRight="@drawable/android_my_jd_appoint" />
    <EditText
        android:id="@+id/et_regist_repwd"
        style="@style/registEditText"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:drawableRight="@drawable/android_my_jd_appoint" />
    <Button
        android:id="@+id/btn_regist_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="40dp"
        android:text="注    册"/>
</LinearLayout>
